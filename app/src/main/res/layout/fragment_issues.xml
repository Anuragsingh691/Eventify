<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".IssuesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Add New Events"
            android:fontFamily="@font/inter"
            android:id="@+id/add_title"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="20dp"
            android:background="@color/purple_700"
            android:id="@+id/img_card"
            android:elevation="20dp"
            android:layout_below="@id/add_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/purple_200"
                android:id="@+id/add_img"
                android:src="@drawable/img"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/img_card"
            android:layout_marginTop="30dp"
            android:id="@+id/name_layout">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="  Event Name "
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/maitree"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect2"
                android:layout_marginLeft="20dp"
                android:id="@+id/name_edt"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/name_layout"
            android:layout_marginTop="30dp"
            android:id="@+id/desc_layout">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" Description "
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/maitree"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/rect2"
                android:layout_marginLeft="20dp"
                android:id="@+id/desc_edt"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/desc_layout"
            android:layout_marginTop="30dp"
            android:id="@+id/date_layout">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" Date "
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/maitree"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect2"
                android:layout_marginLeft="20dp"
                android:id="@+id/date_edt"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/date_layout"
            android:layout_marginTop="30dp"
            android:id="@+id/time_layout">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" Timings "
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/maitree"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect2"
                android:layout_marginLeft="20dp"
                android:id="@+id/time_edt"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/time_layout"
            android:layout_marginTop="30dp"
            android:id="@+id/venue_layout">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" Venue "
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/maitree"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect2"
                android:layout_marginLeft="20dp"
                android:id="@+id/venue_edt"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/venue_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/add"
            android:layout_marginBottom="40dp"
            android:text="Add"
            android:background="@drawable/checkbox_rect"
            android:textColor="#fff"
            android:textSize="20dp"
            android:fontFamily="@font/inter"/>
    </RelativeLayout>
</ScrollView>