<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocietyDetails">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_lay"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/toolbar"
            android:background="#fff"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/home_logo"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo" />
                <TextView
                    android:id="@+id/society_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/home_logo"
                    android:gravity="center"
                    android:text="Society Name"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="@font/maitree"/>
            </RelativeLayout>
        </com.google.android.material.appbar.MaterialToolbar>
        <LinearLayout
            android:id="@+id/horiz_line"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E7E6E6" />
        </LinearLayout>
</RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Activity is still in development please wait until it completes "
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:fontFamily="@font/maitree"/>
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkbox_rect"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text=" Logout "
        android:textColor="#fff"
        android:fontFamily="@font/maitree"
        android:textSize="16sp"/>
</RelativeLayout>